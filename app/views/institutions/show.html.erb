<div class="container-fluid"  style=" box-shadow: inset 0 -5px 45px rgba(100,100,100,0.4), 0 1px 1px rgba(255,255,255,0.2);">
  <div class="text-center">
    <h2 style="color: silver;">Рейтинг</h2>
    </br>
  </div>
  <div style="text-align: center;">
  <div class="row">
    <div class="col-sm-6">
      <div class="panel panel-default text-center" style="">
        <div class="panel-heading">
<h3>Середній рейтинг закладу:</h3>
        </div>
          <div class="panel-body">
  Kitchen: <div id="institution_kitchen"></div>
  Servise: <div id="institution_servise"></div>
  Cleannes: <div id="institution_cleannes"></div>
  Atmosphere: <div id="institution_atmosphere"></div>
          </div>
        </div>
      </div>
<div class="row ">
<%if @rating.nil? %>
  <div style="text-align: center;">
    <button type="button" class="btn btn-default" data-toggle="collapse" data-target="#rating">
      <span class="glyphicon glyphicon-plus">Залишити рекомендацію</span>
    </button>
  </div>
  <div id="rating" class="collapse">
    <div class="col-sm-6">
      <%@rating=Rating.new%>
      <%= form_for @rating , url:rating_institution_path(@institution.id), method: :patch, validate: true  do |f| %>
        <%=render 'ratings/form', f:f%>
	   <%end%>
    </div>
  </div>
<%else%>
   <div class="col-sm-6">
      <div class="panel panel-default text-center">
        <div class="panel-heading">
          <h3>Ваша рекомендація:</h3>
        </div>
        <div class="panel-body">
          <%= render @rating%>
        </div>
      </div>
    </div>
  <%end%>
</div>
</div>

</div>


<div class="container-fluid" >
  <div class="text-center">
    <div style="margin-top: 10%;"></div>
    <h2 style="color: silver;">Відгуки та поради:</h2>
  </div>
  <div style="text-align: center;">
    <button type="button" class="btn btn-default" data-toggle="collapse" data-target="#comment">
      <span class="glyphicon glyphicon-plus">Новий комент</span>
    </button>
  </div>
  <div>
    <div id="comment" class="collapse">
      <%=form_for @institutionComment, url:institution_institution_comments_path(@institution.id) do |f|%>
  		  <%=render "institution_comments/form", f:f%>
      <%end%>
    </div>
    <div style="margin-left: 2%;">
      <% @comments.each do |comment| %>
        <%= render 'institution_comments/institution_comment', comment:comment%>
      <%end%>
    </div>
  </div>
</div>
<div style="margin-top: 10%;"></div>

