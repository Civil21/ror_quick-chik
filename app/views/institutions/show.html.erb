<script>
  function initMap() {
    var uluru = {lat: <%=@institution.latitude%>, lng: <%=@institution.longitude%>};
    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 12,
      center: uluru
    });
    var marker = new google.maps.Marker({
      position: uluru,
      map: map
    });    
  }
</script>
