<hr>
<div class="panel-group">
<div class="panel panel-success">
<div class="panel-body">
<h4><%=comment.text%></h4>
<hr>
<h6>Author: <%=comment.user.email%></h6>
    <%=link_to positiv_vote_path(comment.class.name,comment.id) do%>
      <span class="glyphicon glyphicon-plus"></span>
    <%end%>
    <%=Vote.where(resource_type:comment.class.name,resource_id:comment.id).sum(:score)%>
    <%=link_to negativ_vote_path(comment.class.name,comment.id) do%>
      <span class="glyphicon glyphicon-minus"></span>
    <%end%>
</div>
</div>
</div>
